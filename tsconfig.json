{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "node_modules/vite/client.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ]
}
